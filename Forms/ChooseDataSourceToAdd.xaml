<Window x:Class="SHCAIDA.ChooseDataSourceToAdd"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SHCAIDA"
        mc:Ignorable="d"
        Title="ChooseDataSourceToAdd" Height="300" Width="300" ResizeMode="NoResize">
    <Grid>
        <StackPanel Orientation="Vertical" HorizontalAlignment="Center" Height="269" VerticalAlignment="Top" Width="292">
            <RadioButton x:Name="RockwellRB" Content="Rockwell PLC" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="20" Checked="RockwellRB_Checked"/>
            <RadioButton x:Name="SiemensRB" Content="Siemens S7 PLC" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="20" Checked="SiemensRB_Checked"/>
            <RadioButton x:Name="MSSQLRB" Content="Microsoft SQL Server" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="20" Checked="MSSQLRB_Checked"/>
            <StackPanel Orientation="Horizontal" Height="103" HorizontalAlignment="Center" Margin="51,0">
                <Button Content="Далее" Width="75" Height="40" Margin="20" Click="Button_Click"/>
                <Button Content="Выход" Width="75" Height="40" Margin="20"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
