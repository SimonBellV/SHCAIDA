<Window x:Class="SHCAIDA.ChooseArchiveDataSourceToAdd"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SHCAIDA"
        mc:Ignorable="d"
        Title="ChooseArchiveDataSourceToAdd" Height="248.572" Width="300">
    <Grid>
        <StackPanel Orientation="Vertical" HorizontalAlignment="Center" Height="218" VerticalAlignment="Top" Width="292">
            <RadioButton x:Name="ExcelRB" Content="Microsoft Excel .xls/.xlsx" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="20" Checked="ExcelRB_Checked"/>
            <RadioButton x:Name="DBFRB" Content="DataBaseFile .dbf" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="20" Checked="DBFRB_Checked"/>
            <StackPanel Orientation="Horizontal" Height="87" HorizontalAlignment="Center" Margin="10,20" Width="272">
                <Button Content="Далее" Width="95" Height="40" Margin="20"/>
                <Button Content="Выход" Width="95" Height="40" Margin="20"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
